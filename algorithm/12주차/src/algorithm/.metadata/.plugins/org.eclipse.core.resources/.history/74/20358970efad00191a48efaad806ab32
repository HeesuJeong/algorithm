import java.util.Scanner;

public class _1210 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		final int MAX = 100;
		int[][] arr = new int[MAX][MAX];

		// 좌우하
		int[] dx = { 0, 0, 1 };
		int[] dy = { -1, 1, 0 };

		int tmp = 0;
		for (int tc = 1; tc <= 10; tc++) {
			sc.nextInt();
			for (int i = 0; i < arr.length; i++) {
				for (int j = 0; j < arr[i].length; j++) {
					arr[i][j] = sc.nextInt();
				}
			}
			///////////// 사다리 타기

			// 열만 바뀌고 행은 0
			int i = 0;
			int nx = 0;
			int ny = 0;
			for (i = 0; i < MAX; i++) {
				boolean success = false;
				if (arr[0][i] == 1) {
					nx = 0;
					ny = i;
					
					while (ny < MAX) {
						for (int j = 0; j < 3; j++) {
							int tmpX = nx + dx[j];
							int tmpY = ny + dy[j];
							if (tmpX < 0 || tmpX >= MAX || tmpY < 0 || tmpY >= MAX) {
								continue;
							}
							if (arr[tmpX][tmpY] == 1) {
								nx = tmpX;
								ny = tmpY;
							}
						}
					} // while끝
				}//if끝
				
				if (arr[nx][ny] == 2) {
					success = true;
					break;
				}
			} // 열탐색 끝
			System.out.println("답 : " + i);
		} // tc
	}

}
